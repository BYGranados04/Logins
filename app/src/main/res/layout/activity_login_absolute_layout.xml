<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_absolute_layout"
    android:background="#030B1E">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="263dp"
        android:layout_centerHorizontal="false"
        android:layout_x="87dp"
        android:layout_y="54dp"
        app:srcCompat="@drawable/logotarea" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_x="150dp"
        android:layout_y="362dp"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="281dp"
        android:layout_height="36dp"
        android:layout_below="@id/textView"
        android:layout_x="65dp"
        android:layout_y="413dp"
        android:background="@drawable/bordetexto"
        android:drawableLeft="?android:attr/fingerprintAuthDrawable"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/abeezee"
        android:hint="Usuario"
        android:inputType="text"
        android:textColorHint="#464646"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="281dp"
        android:layout_height="36dp"
        android:layout_below="@id/editText"
        android:layout_x="66dp"
        android:layout_y="480dp"
        android:background="@drawable/bordetexto"
        android:drawableLeft="@drawable/contrasenachi"
        android:ems="10"
        android:fontFamily="@font/abeezee"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColorHint="#464646" />

    <Button
        android:id="@+id/button3"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText2"
        android:layout_x="145dp"
        android:layout_y="566dp"
        android:background="@drawable/boton"
        android:fontFamily="@font/allerta"
        android:foregroundGravity="center_horizontal"
        android:text="Ingresar"
        android:textAllCaps="false" />

</AbsoluteLayout>